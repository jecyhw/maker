
  <%= form_tag(maker_user_login_path, remote: true, method: :post) do %>
      <div class="form-group">
        <%= label_tag(:account, '账号') %>
        <%= text_field_tag(:account, '', class: 'form-control', placeholder: '请输入账号') %>
      </div>
      <div class="form-group">
        <%= label_tag(:password, '密码') %>
        <%= password_field_tag(:password, '', class: 'form-control', placeholder: '请输入密码', autocomplete: 'off') %>
      </div>
      <!-- //用于阻止 chrome表单自动填充的占位符 -->
      <input class='hidden' type="text" />
      <input class='hidden' type="password"/>
      <!-- //用于阻止 chrome表单自动填充的占位符 -->
      <!--<div class="form-group col-sm-6">-->
        <!--<button type="submit" class="btn-lg btn-primary btn-block">注册</button>-->
      <!--</div>-->
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">登陆</button>
      </div>
      <div class="form-group">
        <div class="text-info text-center">提示:工作人员使用工号登陆，非工作人员请使用国科大邮箱登陆</div>
      </div>
  <% end %>
