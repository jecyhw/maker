<%= form_for(@region, url: maker_user_admin_path, method: :post, class: 'row', data: { disable_with: '提交中...', remote: true}) do |f| %>
  <div class="form-group col-sm-12">
    <%= f.label :name, '区域名'%><%= '(多个区域名使用|分隔)' if @operate_type == OPERATE_TYPE[:add] %>
    <%= f.text_field(:name, class: 'form-control') %>
  </div>
  <%= hidden_field_tag(:method, @method) %>
  <%= hidden_field_tag(:id, @region.id) if @operate_type == OPERATE_TYPE[:edit]%>
  <!--<div class="form-group col-sm-6">-->
  <!--<button type="submit" class="btn-lg btn-primary btn-block">注册</button>-->
  <!--</div>-->
  <div class="form-group col-sm-12">
    <button type="submit" class="btn btn-primary btn-block">确定</button>
  </div>
<% end %>

