<% provide(:title, '管理员') %>
<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true %>
<div class="row ">
  <div class="col-md-2 left-nav">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="list-group">
        <a  href="<%= maker_user_admin_path %>" class="list-group-item list-group-item-click" data-method="canteen_worker_show">
          食堂工作人员管理
        </a>
      </div>
    </div>
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">食堂结构管理</div>
      <div class="list-group">
        <a href="<%= maker_user_admin_path %>" class="list-group-item" data-method="region_show">
          区域
        </a>
        <a href="<%= maker_user_admin_path %>" class="list-group-item" data-method="canteen_show">
          食堂
        </a>
        <a href="<%= maker_user_admin_path %>" class="list-group-item"  data-method="stair_layer_show">
          楼层
        </a>
        <a href="<%= maker_user_admin_path %>" class="list-group-item"  data-method="canteen_window_show">
          窗口
        </a>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">个人资料</div>
      <div class="list-group">

        <a href="<%= maker_user_admin_path %>" class="list-group-item" data-method="modify_basic_info" data-op="false">
          基本资料
        </a>
        <a href="<%= maker_user_admin_path %>" class="list-group-item" data-method="modify_photo" data-op="false">
          头像设置
        </a>
        <a href="<%= maker_user_admin_path %>" class="list-group-item" data-method="modify_password" data-op="false">
          修改密码
        </a>
      </div>
    </div>

  </div>
  <div class="col-md-2"></div>
  <div class="col-md-10 right-content">
      <div class="row">
        <div class="col-sm-8">
            <ol class="breadcrumb">
              <li><span>食堂工作人员管理</span></li>
            </ol>
        </div>
        <div class="col-sm-4">
          <div class="right add-delete show">
            <button type="button" class="btn btn-default" name="unselect">
              反选
            </button>
              <button type="button" class="btn btn-primary" name="add">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加
              </button>
              <button type="button" class="btn btn-danger" name="delete">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
              </button>
          </div>
          <div class="right edit hide">
            <button type="button" class="btn btn-info" name="edit">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
            </button>
          </div>
        </div>
      </div>
      <hr class="admin-hr"/>
    <div id="content-container">

    </div>
  </div>
</div>
<%= javascript_include_tag('admin')%>